<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="RegisterAsVolunteerActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_volunteer_title"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_info"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/darkblue"/>

        <EditText
            android:id="@+id/username_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_username"
            android:maxLines="1"
            android:drawableStart="@drawable/user"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/email_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_email"
            android:maxLines="1"
            android:drawableStart="@drawable/email"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <EditText
            android:id="@+id/password_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_password"
            android:maxLines="1"
            android:drawableStart="@drawable/lock"
            android:inputType="textPassword"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/darkblue"/>

        <EditText
            android:id="@+id/first_name_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_first_name"
            android:maxLines="1"
            android:drawableStart="@drawable/add_person"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <EditText
            android:id="@+id/last_name_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_last_name"
            android:maxLines="1"
            android:drawableStart="@drawable/add_person"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <EditText
            android:id="@+id/phone_number_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_phone_number"
            android:maxLines="1"
            android:drawableStart="@drawable/phone"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/age_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="@string/prompt_age"
            android:maxLines="1"
            android:drawableStart="@drawable/age"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <Button
            android:id="@+id/register_as_volunteer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="@string/register_button"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/grey"
            android:text="@string/cancel_button"
            android:textColor="@color/white" />


    </LinearLayout>


</ScrollView>
